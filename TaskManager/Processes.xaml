<Page x:Class="Multimanager.TaskManager.Processes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Multimanager.TaskManager"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="730"
      Title="Processes">

    <Grid>
        <ListView x:Name="processesList" Background="{x:Null}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="auto" DisplayMemberBinding="{Binding name}"/>
                    <GridViewColumn Header="Id" Width="auto" DisplayMemberBinding="{Binding id}"/>
                    <!--<GridViewColumn Header="CPU" Width="auto" DisplayMemberBinding="{Binding cpu}"/>-->
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
